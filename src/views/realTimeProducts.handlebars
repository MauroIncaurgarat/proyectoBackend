<div class="form">
    <form action="/realTimeProducts" id="productForm" method="post" enctype="application/x-www-form-urlencoded">
    
        <legend> AGREGAR NUEVO PRODUCTO </legend>

        <div>
            <label> Title: </label>
            <input type="text" id="title" name="title">
        </div>
        <div>
            <label>Description: </label>
            <input type="text" id="description" name="description">
        </div>
        <div>
            <label>Price: </label>
            <input type="number" id="price" name="price">
        </div>
        <div>
            <label> Thumbnail: </label>
            <input type="text" id="thumbnail" name="thumbnail">
        </div>
        <div>
            <label>Code</label>
            <input type="text" id="code" name="code">
        </div>
        <div>
            <label>Stock </label>
            <input type="number" id="stock" name="stock">
        </div>
        <button type="submit"> Enviar Producto </button> 
    </form>
</div>

<div style="padding-top: 15p;">
    <form action="/realTimeProducts" id="deleteProduct" method="post" enctype="application/x-www-form-urlencoded">
        <div>
            <label> INDIQUE EL ID DEL ELEMENTO A ELIMINAR: </label>
            <input type="number" id="title" name="deleteId">
        </div>
        <button type="submit"> Eliminar </button> 
    </form>
</div>

<div class="conteiner" id="productFeed"> 
    {{#each products}}
        <div id="{{id}}">
            <li>Producto: {{title}}
                <ul>
                    <li>Code: {{code}}</li>
                    <li>Descripion: {{description}}</li>
                    <li>Precio: {{price}}</li>
                    <li>Stock: {{stock}}</li>
                    <li>id: {{id}}</li>
                </ul>
            </li>
        </div>
    {{/each}}
</div>